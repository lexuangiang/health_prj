<div class="container">
  <div class="card card-container">
    <h2 class="text-center">Forgot your password?</h2>
    <%= image_tag "logo.png", class: "profile-img-card" %>
    <p id="profile-name" class="profile-name-card"></p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <form class="form-signin">
      <span id="reauth-email" class="reauth-email"></span>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "yourmail@example.com" %><br/>
      <%= f.submit "reset password", class: "btn btn-lg btn-primary btn-block btn-signin" %>
    </form>
    <!-- /form -->
    <label>New here?
    </label>
    <%= link_to "Join Us", new_registration_path(resource_name) %>
    <label>Already have account?</label>
    <%= link_to "Log in", new_session_path(resource_name) %>
    <% end %>
  </div>
  <!-- /card-container -->
</div>
